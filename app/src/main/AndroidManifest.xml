<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-sdk android:minSdkVersion="24" android:targetSdkVersion="33" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/hi"
        android:label="Trip Expenses"
        android:roundIcon="@drawable/hi"
        android:supportsRtl="true"
        android:theme="@style/Theme.GroupTripExpenseTracker"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewTrips"
            android:label="Add New Trip"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Expenses"
            android:label="Expenses"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TripsList"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Main2Activity"
            android:label="Start Your Journey"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".Viewdetails"
            android:label="Details" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".Update" />
        <activity android:name=".TripsList1" />
        <activity android:name=".TripsList2" />
        <activity android:name=".TripsList3" />
        <activity android:name=".DayWiseExpense"
            android:label="Day Wise Expense"/>
        <activity
            android:name=".TripWiseExpense"
            android:label="Trip Wise Expenses"></activity>
        <activity android:name=".CategoryWiseExpense"
            android:label="Category Wise Expenses"></activity>
    </application>

</manifest>